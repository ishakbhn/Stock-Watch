<div class="result-block-form"> <%= bootstrap_flash %> </div>
<% if @stock %>
	<div class="well result-block-form">
		<strong>Symbol:</strong> <%= @stock.ticker	%>
		<strong>Name:</strong> <%= @stock.name	%>
		<strong>Price:</strong> USD <%= @stock.last_price	%>
		<%=link_to "Add to portfolio", user_stocks_path(user: current_user, stock_ticker: @stock.ticker), class: "btn btn-xs btn-primary", method: :post %>
	</div>
<% end %>